{
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "baseUrl": "./",
      "outDir": "build",
      "removeComments": true,
      "experimentalDecorators": true,
      "target": "es6",
      "noImplicitAny": false,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "importHelpers": true,
      "types": [
        "node",
        "mocha"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "paths": {
        "captains-log": ["src/types/captains-log"]
      }
    },
    "include": [
      "./src/**/*.ts",
      "./test/**/*.ts"
    ]
}